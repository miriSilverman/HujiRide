    <style name="MainAppStyle">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MainAppStyle.Header">
        <item name="android:textSize">34sp</item>
        <item name="android:background">@color/main_app_title_bg</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="MainAppStyle.rides">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainAppStyle.Button">
        <item name="android:layout_height">60dip</item>
        <item name="android:backgroundTint">@color/main_app_btn_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MainAppStyle.Button.fab">
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MainAppStyle.Details">
        <item name="fontFamily">@font/annie_use_your_telescope</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="MainAppStyle.Details.Title">
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="OnboardingStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/onb_colorPrimary</item>
        <item name="fontFamily">@font/catamaran</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>

    <style name="OnboardingStyle.header">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/catamaran_bold</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="OnboardingStyle.body">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/catamaran</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="OnboardingStyle.TextFields">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:maxLength">20</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/onb_colorPrimary</item>
        <item name="fontFamily">@font/catamaran_medium</item>
        <item name="singleLine">true</item>
        <item name="android:maxEms">12</item>
    </style>
    <style name="OnboardingStyle.NavigationButtons">

    </style>


</resources>