        <TextView
            android:id="@+id/time_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:background="@color/teal_700"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="16dp"
            android:hint="Select Time"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place_autocomplete_fragment_dest" />

        <TextView
            android:id="@+id/comments_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:background="@color/teal_700"
            android:drawableStart="@drawable/ic_add"
            android:drawablePadding="16dp"
            android:hint="Add Comments"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_edit_btn" />



        <ImageView
            android:id="@+id/done_btn"
            android:layout_width="89dp"
            android:layout_height="78dp"
            android:layout_marginTop="16dp"
            android:background="#673AB7"
            android:src="@drawable/ic_baseline_done_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.784"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comments_edit_btn"
            app:layout_constraintVertical_bias="0.015" />


        <ImageView
            android:id="@+id/just_for_padding"
            android:layout_width="15dp"
            android:layout_height="12dp"
            android:layout_marginTop="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/done_btn"
            app:srcCompat="@drawable/ic_baseline_linear_scale_24" />



        <ImageView
            android:id="@+id/srcDestImg"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:srcCompat="@drawable/resource_switch" />

        <Button
            android:id="@+id/switchDirectionBtn"
            android:layout_width="125dp"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:text="switch direction"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/srcDestImg" />


        <TextView
            android:id="@+id/src_huji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from:  HUJI"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/switchDirectionBtn"
            tools:layout_editor_absoluteY="314dp" />

        <TextView
            android:id="@+id/dest_huji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to:  HUJI"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/src_huji"
            tools:layout_editor_absoluteY="314dp" />


        <fragment
            android:id="@+id/place_autocomplete_fragment_src"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="328dp"
            app:layout_constraintTop_toBottomOf="@id/switchDirectionBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:layout_height="48dp" />



        <fragment
            android:id="@+id/place_autocomplete_fragment_dest"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="328dp"
            app:layout_constraintTop_toBottomOf="@id/place_autocomplete_fragment_src"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/date_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:background="@color/teal_700"
            android:drawableStart="@drawable/ic_baseline_calendar_today_24"
            android:drawablePadding="16dp"
            android:hint="Select Date"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_edit_btn" />



    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>