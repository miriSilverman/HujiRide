<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".SearchHome">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/map_new" />


        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#D2E1E1"
            android:fontFamily="@font/fredoka_one"
            android:gravity="center"
            android:text="@string/searchRidesTitle"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <fragment
            android:id="@+id/place_autocomplete_fragment_src"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <fragment
            android:id="@+id/place_autocomplete_fragment_dest"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/place_autocomplete_fragment_src" />


        <Button
            android:id="@+id/driver_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/circle"
            android:backgroundTint="#009688"
            android:drawableTop="@drawable/ic_twotone_directions_car_24"
            android:text="@string/driverBtnText"
            app:backgroundTint="#80CBC4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place_autocomplete_fragment_dest" />

        <Button
            android:id="@+id/trampist_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="80dp"

            android:layout_marginTop="96dp"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/ic_twotone_person_outline_24"
            android:text="@string/trampistBtnText"
            app:backgroundTint="#80CBC4"

            app:layout_constraintEnd_toStartOf="@+id/driver_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place_autocomplete_fragment_dest" />

        <ImageView
            android:id="@+id/srcDestImg"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:srcCompat="@drawable/to_huji" />

        <!--Button
            android:id="@+id/switchDirectionBtn"
            android:layout_width="125dp"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:text="@string/switchDirectionBtnText"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/srcDestImg" -->

        <ImageButton
            android:id="@+id/switchDirectionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_swap_vert_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.866"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.373" />

        <ImageView
            android:id="@+id/just_for_padding"
            android:layout_width="15dp"
            android:layout_height="12dp"
            android:layout_marginTop="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trampist_btn"
            app:srcCompat="@drawable/ic_baseline_linear_scale_24" />

        <TextView
            android:id="@+id/src_huji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="136dp"
            android:fontFamily="@font/fredoka_one"
            android:text="from:  HUJI"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.306"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/srcDestImg" />

        <TextView
            android:id="@+id/dest_huji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/fredoka_one"
            android:text="to:  HUJI"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.258"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/src_huji" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>
