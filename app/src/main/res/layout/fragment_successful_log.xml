<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding.Successful_log"
    android:paddingHorizontal="20dp">

    <TextView
        style="@style/OnboardingStyle.header"
        android:id="@+id/registration_txt"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:text="@string/registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autoSizeTextType="uniform"
        />

    <TextView
        android:id="@+id/registration_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/OnboardingStyle.body"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/registration_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/successful_onb_tip"
        android:autoSizeTextType="uniform"
        android:lines="1"
        android:layout_marginHorizontal="30dp"
        />

    <ProgressBar
        android:id="@+id/complete_reg_loading"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>