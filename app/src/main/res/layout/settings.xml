<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#4CAF50"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="137dp"
        android:text="@string/settingsTitle"
        android:textSize="100sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerInParent="true"
        tools:layout_editor_absoluteX="161dp" />

    <Switch
        android:id="@+id/all_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn on all notifications"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="322dp"
        app:layout_constraintTop_toBottomOf="@id/settings_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50sp"
        />

    <Switch
        android:id="@+id/group_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn on just group notifications"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="398dp"
        app:layout_constraintTop_toBottomOf="@id/all_notifications"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>